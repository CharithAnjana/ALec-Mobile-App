<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/userName"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins"
            android:gravity="fill_horizontal"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:backgroundTint="#43A047"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFS" />

        <TextView
            android:id="@+id/points"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:backgroundTint="#43A047"
            app:layout_constraintEnd_toStartOf="@+id/tvFS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pts"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="pts"
            android:textColor="@color/black"
            android:textSize="10dp"
            app:backgroundTint="#43A047"
            app:layout_constraintEnd_toEndOf="@+id/points"
            app:layout_constraintStart_toStartOf="@+id/points"
            app:layout_constraintTop_toBottomOf="@+id/points" />

        <TextView
            android:id="@+id/tvFS"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="fill_vertical"
            android:text="Subject"
            android:textColor="#008799"
            android:textSize="20dp"
            android:visibility="visible"
            app:backgroundTint="#43A047"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/points"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvDT"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="3dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins"
            android:gravity="right"
            android:text="Date"
            android:textSize="15dp"
            app:backgroundTint="#43A047"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFS" />

        <TextView
            android:id="@+id/tvFQ"
            android:layout_width="270dp"
            android:layout_height="1sp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginStart="4dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins"
            android:gravity="fill_horizontal"
            android:text="Question"
            android:textColor="@color/black"
            android:visibility="gone"
            app:backgroundTint="#43A047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/tvTI"
            android:layout_width="270dp"
            android:layout_height="1sp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginStart="84dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins"
            android:gravity="fill_horizontal"
            android:text="Topic ID"
            android:textColor="@color/black"
            android:visibility="gone"
            app:backgroundTint="#43A047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFQ"
            tools:visibility="invisible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>