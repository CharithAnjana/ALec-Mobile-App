<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LecAddQuizNewSeltCurs"
    android:background="#cfd8dc">

    <Button
        android:id="@+id/create"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_marginTop="60dp"
        android:onClick="Next"
        android:text="NEXT"
        app:backgroundTint="#00BFA5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/spCourse" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="130dp"
        android:layout_height="64dp"
        android:layout_marginTop="60dp"
        android:onClick="Cancel"
        android:text="CANCEL"
        app:backgroundTint="#EC407A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spCourse" />

    <Spinner
        android:id="@+id/spCourse"
        android:layout_width="300dp"
        android:layout_height="81dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/SelextText"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/SelextText"
        app:layout_constraintTop_toBottomOf="@+id/SelextText" />

    <TextView
        android:id="@+id/SelextText"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Please Select the Course"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>